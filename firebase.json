{
  "hosting": {
    "public": "dist/boardbuilder",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "en/**",
        "destination": "/en/index.html"
      },
      {
        "source": "fr/**",
        "destination": "/fr/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
